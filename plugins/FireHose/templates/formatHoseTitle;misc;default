__section__
default
__description__
the_user = user hash for author
url = url for associated url if applicable
item = firehose item
__title__
Useless title to template
__page__
misc
__lang__
en_US
__name__
formatHoseTitle
__template__
[%
the_skin_title = "";
IF item.primaryskid && item.primaryskid != form.primaryskid && item.primaryskid != constants.mainpage_skid;
	the_skin = Slash.db.getSkin(item.primaryskid);
	the_skin_title = the_skin.title _ ": ";
END;
title = the_skin_title _ item.title;
title = "<a onclick='javascript:toggle_firehose_body(\"$item.id\", $adminmode); return false' href='$gSkin.rootdir/firehose.pl?op=view&amp;id=$item.id'>" _ title _ "</a>";
IF item.url_id;
        title = title _ "<span class=\"external\"><a href=\"" _ url.url _ "\" title=\"External link - " _ url.url _ "\" target=\"_blank\">[-&gt;]</a></span>";
END;
title = title _ " " _ '<span class="date">' _ Slash.timeCalc(item.createtime, "%Y-%m-%d %H:%M") _  "</span> <span class='nickname'>" _ item.name _ "</span>";
	
firehose = Slash.getObject("Slash::FireHose");
pop_val = firehose.getPopLevelForPopularity(item.popularity);
pop_disp = item.popularity.int;

IF adminmode;
        reject_checkbox = PROCESS reject_firehose id = item.id;
        title = reject_checkbox _ "<span class='soda pop" _  pop_val _ "'> " _  pop_disp _ "</span> " _ title;
ELSE;
        title = "<span class='soda pop" _  pop_val _ "'> &nbsp; </span> " _ title;
END;
	%]
[% IF showtitle; title; END; %]
__seclev__
10000
__version__
