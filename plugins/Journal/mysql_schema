DROP TABLE IF EXISTS journals;
CREATE TABLE journals (
	id int(5) NOT NULL auto_increment,
	uid int(11) NOT NULL,
	date datetime NOT NULL,
	description varchar(80),
	posttype int(1) DEFAULT '2' NOT NULL,
	PRIMARY KEY (id),
	KEY uidarticle (uid),
	KEY IDandUID (id,uid)
);

DROP TABLE IF EXISTS journals_text;
CREATE TABLE journals_text (
	id int(5) NOT NULL,
	article text,
	original text,
	PRIMARY KEY (id)
);

DROP TABLE IF EXISTS journal_friends;
CREATE TABLE journal_friends (
	id int(5) NOT NULL auto_increment,
	uid int(11) NOT NULL,
	friend int(11) NOT NULL,
	UNIQUE jackandjill (uid,friend),
	PRIMARY KEY (id)
);

DROP TABLE IF EXISTS journal_themes;
CREATE TABLE journal_themes (
	id int(5) NOT NULL auto_increment,
	name varchar(30) NOT NULL,
	UNIQUE name(name),
	PRIMARY KEY (id)
);
