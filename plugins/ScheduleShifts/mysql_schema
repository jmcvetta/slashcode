# $Id: mysql_schema,v 1.2 2005/08/28 16:53:24 jamiemccarthy Exp $
CREATE TABLE shifts (
    date            DATETIME,
    uid             MEDIUMINT(8),
    type            ENUM('shift', 'default'),
    shift           ENUM('morning', 'afternoon', 'evening'),
    last_changed    TIMESTAMP,
    INDEX byuser    (uid),
    INDEX bytime    (last_changed),
    INDEX byshift   (shift, uid, type)
) ENGINE=InnoDB;
